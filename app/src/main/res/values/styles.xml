<resources>

    <!-- Base application theme. -->


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--Light/Day Mode -->
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">#303030</item>
        <item name="edittextbackground">#424242</item>
        <item name="textcolor">#ffffff</item>
        <item name="tintcolor">#fcfcfc</item>
        <item name="buttoncolor">#2196F3</item>
        <item name="android:textColorHint">#ffffff</item>
    </style>

    <style name="darktheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--Night/Dark Mode -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">#fcfcfc</item>
        <item name="edittextbackground">#ffffff</item>
        <item name="textcolor">#808080</item>
        <item name="tintcolor">#fcfcfc</item>
        <item name="buttoncolor">#2196F3</item>
        <item name="android:textColorHint">#808080</item>
    </style>

    <style name = "SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name = "android:windowBackground">@drawable/background</item>
    </style>

</resources>
